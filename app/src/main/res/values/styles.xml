<resources>
    <style name="IctcTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/text_color</item>
    </style>

    <style name="AppTheme.NoShadow" parent="IctcTheme">
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>


    <style name="AppTheme.Tab" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>


    <style name="AppTheme.ActionBar" parent="IctcTheme">
        <item name="android:textColorSecondary">@color/white</item>

    </style>


    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:paddingRight">4dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/material_grey_200</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
    <!-- ListView related themes end here -->

    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColor">@color/material_grey_300</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>


    <style name="BubbleTheme" parent="TextAppearance.AppCompat">

        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlNormal">#dadada</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- To tint the buttons -->
        <item name="android:itemPadding">@dimen/alert_def_padding</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_red_500</item>

    </style>


    <style name="TextInputLayoutEditText" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/background_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorHint">#cacaca</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/background_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorHint">#313131</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


    <style name="ForecastElement" parent="@android:style/TextAppearance.Medium">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/five_day_forecast_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ForecastElementDay" parent="@style/ForecastElement">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/five_day_forecast_day_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
     </style>

    <style name="SelectedForecastElementDay" parent="@style/ForecastElementDay">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
