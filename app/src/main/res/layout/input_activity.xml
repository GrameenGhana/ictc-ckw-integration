<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/vv"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:id="@+id/default_view_profile_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/cluster_child_single"/>

        <TextView
            android:id="@+id/act_farmer_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_half"
        android:orientation="horizontal"
        android:weightSum="8">

        <CheckBox
            android:id="@+id/seedBox"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_weight="3"
             android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="Seed"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/seedbags"
            android:layout_width="0dp"
             android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
             android:text="bags"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_half"
        android:orientation="horizontal"
        android:weightSum="8">

        <CheckBox
            android:id="@+id/fertilizercheckbox"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="Fertilizer"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/fertilizerbags"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:text="bags"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_half"
        android:orientation="horizontal"
        android:weightSum="8">

        <CheckBox
            android:id="@+id/ploughingBox"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="Plough"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/ploughBags"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:text="bags"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnInputSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorAccent"
         android:textColor="@color/white"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Save"/>

</LinearLayout>