<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dip"
    android:id="@+id/simp_rel_lay">

        <TextView
            android:layout_width="@dimen/spacing_3"
            android:layout_height="@dimen/spacing_3"
            android:id="@+id/lst_text_item_icon"
            android:padding="@dimen/spacing_half"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:text="1"
                android:textSize="20dp"
                android:textColor="#fff9fbff"
                android:background="@drawable/text_icon_design"
                android:gravity="center" />

    <applab.client.agrihub.ui.font.RobotoTextView
        android:id="@+id/lst_text_item_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lst_text_item_icon"
        android:padding="@dimen/spacing_normal"
        android:text="Efg"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_normal"
        android:textColor="#ff02070c"
        app:typeface="robotoLight"/>


 </RelativeLayout>