<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:weightSum="3"
              android:padding="5dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
        android:id="@+id/profile_container" android:background="#fff0f0f0"
            >
        <include layout="@layout/cluster_child_single" android:layout_height="match_parent"
                 android:layout_width="match_parent"/>
        </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="2" android:padding="10dp"
            android:paddingTop="20dp">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView" android:dividerHeight="10dp" android:divider="#eee"
                />
    </LinearLayout>

</LinearLayout>
