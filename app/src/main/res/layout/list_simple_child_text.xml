    android:orientation="vertical"
     android:id="@+id/simp_rel_lay">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4" android:gravity="center_vertical">
        <TextView
                android:id="@+id/lst_text_item_icon1"
                android:layout_width="@dimen/spacing_3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:text="1"
                android:textSize="20dp"
                android:textColor="#fff9fbff"
                android:background="#ff596aff"
                android:gravity="center"/>
        <applab.client.agrihub.ui.font.RobotoTextView
                android:id="@+id/lst_text_item_titles1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal"
                android:text="Efg"
            app:typeface="robotoLight"  android:textColor="#ff02070c"/>

    </LinearLayout>


</RelativeLayout>