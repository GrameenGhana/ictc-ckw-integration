<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:clickable="false"
    app:cardBackgroundColor="#fff"
     xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                >

                <applab.client.search.utils.CircularImageView
                    android:layout_marginTop="12dp"
                    android:id="@+id/farmerImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_person"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#e0b9b9b9"
                    app:civ_shadow_radius="10" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="16dp"
                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp">

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff0e4918"
                            android:textStyle="bold"
                            app:typeface="robotoBold" />

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Large Text"
                            android:textSize="@dimen/text_size_normal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             app:typeface="robotoBold"
                            android:scrollHorizontally="true"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:text="Location: "
                             android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff0e4918"
                            android:textStyle="bold" />

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             app:typeface="robotoRegular" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp">

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                             android:text="Cluster:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff0e4918"
                            android:textStyle="bold"
                            app:typeface="robotoBold" />

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView_groups"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                             app:typeface="robotoRegular" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        >

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crop: "

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff0e4918"
                            android:textStyle="bold"
                            app:typeface="robotoBold" />

                        <applab.client.agrihub.ui.font.RobotoTextView
                            android:id="@+id/textView_mainCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/text_size_normal"
                            app:typeface="robotoRegular" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>



        </LinearLayout>
</android.support.v7.widget.CardView>