<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/bulk_message_item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="@dimen/spacing_half"
    >

    <TextView
        android:id="@+id/farmer_name"
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_half"
        />


    <TextView
        android:id="@+id/farmer_location"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="Location"
        android:textSize="@dimen/text_size_normal"
        android:layout_below="@id/farmer_name"
        android:layout_marginBottom="@dimen/spacing_half"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/farmer_phone"
        android:layout_width="wrap_content"
        android:layout_below="@id/farmer_location"
        android:text="Phone number"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginBottom="@dimen/spacing_half"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bulk_message_item_checkbox"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_normal"
        />



</RelativeLayout>